{
  "manifest_version": 3,
  "name": "PCARE Auto Input Helper",
  "version": "1.2.2",
  "description": "Automate PCARE input with pause, resume, delay, and popup handling",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://pcarejkn.bpjs-kesehatan.go.id/*",
    "https://v0-pcare.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://pcarejkn.bpjs-kesehatan.go.id/*"
      ],
      "js": ["content.js"]
    }
  ]
}
