{
  "manifest_version": 3,
  "name": "PCARE Auto Input Helper",
  "version": "1.4.0",
  "description": "Automate PCARE input with Sehat/Konseling support",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://pcarejkn.bpjs-kesehatan.go.id/*",
    "https://v0-pcare.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://pcarejkn.bpjs-kesehatan.go.id/*"],
      "js": ["content.js"]
    }
  ]
}